mixin product-spotlight(data)
  section.product-spotlight(class!=attributes.class)
    .product-spotlight__title-wrapper
      h2.product-spotlight__title #{data.title}
      b.product-spotlight__spotlight Товар недели
    p.product-spotlight__text #{data.text}
    dl.product-spotlight__description-list
      each item in data.desriptionList
        .product-spotlight__description-wrapper
          dt.product-spotlight__term #{item.term}
          dd.product-spotlight__details #{item.details}
    .product-spotlight__image-wrapper
      picture
        source(
          media="(min-width: 1250px)"
          type="image/webp"
          srcset="images/product-spotlight/triple-set-desktop.webp, images/product-spotlight/triple-set-desktop@2x.webp 2x"
        )
        source(
          media="(min-width: 1250px)"
          srcset="images/product-spotlight/triple-set-desktop.jpg, images/product-spotlight/triple-set-desktop@2x.jpg 2x"
        )
        source(
          media="(min-width: 768px)"
          type="image/webp"
          srcset="images/product-spotlight/triple-set-tablet.webp, images/product-spotlight/triple-set-tablet@2x.webp 2x"
        )
        source(
          media="(min-width: 768px)"
          srcset="images/product-spotlight/triple-set-tablet.jpg, images/product-spotlight/triple-set-tablet@2x.jpg 2x"
        )
        source(
          type="image/webp"
          srcset="images/product-spotlight/triple-set-mobile.webp, images/product-spotlight/triple-set-mobile@2x.webp 2x"
        )
        img(
          src="images/product-spotlight/triple-set-mobile.jpg"
          srcset="images/product-spotlight/triple-set-mobile@2x.jpg 2x"
          alt="Фотография товара"
        )
    p.product-spotlight__price-wrapper
      span Цена:#{` `}
      span.product-spotlight__price #{data.price}&nbsp;
      span руб.
    a.product-spotlight__order(href="#") Заказать
